{{#if @mainmenu.length }}

  <nav id="site-navigation" class="main-navigation tg-primary-menu tg-primary-menu--style-underline">

    <div class="menu">
      <ul id="primary-menu" class="menu-primary nav-menu" aria-expanded="false">

        {{#each @mainmenu }}
          <li class="menu-item navigation-link-other {{#isCurrentUrl url}} current   {{/isCurrentUrl}}">
            <a class="navigation-link" href="{{url}}">{{{title}}}</a>

            {{#if submenus }}
              <div class="submenus">
              {{#each submenus }}
                <a href="{{url}}" target="_blank">{{{title}}}</a>
              {{/each}}
              </div>
            {{/if}}
          </li>

        {{/each}}

      </ul>
    </div>
  </nav><!-- #site-navigation -->

  <nav id="header-action" class="tg-header-action">
    <ul class="tg-header-action-list">

      <li class="tg-header-action__item tg-mobile-toggle">
        <i class="tg-icon tg-icon-bars"></i>
      </li>
      <!-- /.tg-mobile-toggle -->
    </ul>
    <!-- /.zakra-header-action-list -->
  </nav><!-- #header-action -->


  <nav id="mobile-navigation" class="tg-mobile-navigation">
    <div class="menu-primary-menu-container">
      <ul id="primary-menu" class="menu">
        {{#each @mainmenu }}
          <li class="menu-item menu-item-type-post_type menu-item-object-page {{#isCurrentUrl url}} current-menu-item  {{/isCurrentUrl}}">
            <a href="{{url}}">{{{title}}}</a>
          </li>
        {{/each}}
        <li class="menu-item tg-header-button-wrap"><a href="#" target="&quot;_blank&quot;">Get it now</a></li>
      </ul>
    </div>
  </nav>

{{/if}}
